<div class="register-panel">
    <script>
        document.getElementById("login-header").style.display = "none";
    </script>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="card shadow-lg  rounded-lg mt-5">
                    <div class="card-header">
                        <h3 class="text-center font-weight-light my-4">Vui lòng điền thông tin tài khoản</h3>
                    </div>
                    <div class="card-body">
                        <form method="POST" action="/account/save" name="register" onsubmit="return registerValidate()">
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <div class="form-floating mb-3 mb-md-0">
                                        <input class="form-control" id="inputFirstName" type="text"
                                            placeholder="Enter your username" name="username" />
                                        <label for="inputUserName">Tên tài khoản</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input class="form-control" id="inputName" type="text"
                                            placeholder="Enter your name" name="name" />
                                        <label for="inputName">Họ tên</label>
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <div class="form-floating mb-3 mb-md-0">
                                        <input class="form-control" id="inputNationalID" type="number" placeholder="Số căn cước công dân" name="nationalId" />
                                        <label for="inputNationalID">Số căn cước công dân</label>
                                        </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-floating">
                                                <input class="form-control" id="inputAddress" type="text" placeholder="Địa chỉ của bạn" name="address" />
                                                <label for="inputAddress">Địa chỉ</label>
                                            </div>
                                        </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                        <input class="form-control" id="inputPhoneNumber" type="number"
                                            placeholder="+84" name="phone" />
                                        <label for="inputFirstName">Số điện thoại</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating" id="choosesex">
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="sex" id="exampleRadios1" value="male" checked>
                                            <label class="form-check-label" for="exampleRadios1">
                                                Nam
                                            </label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" name="sex" id="exampleRadios2" value="female">
                                            <label class="form-check-label" for="exampleRadios2">
                                                Nữ
                                            </label>
                                        </div>
                                        {{!-- <label for="choosesex">Giới tính</label> --}}
                                    </div>
                                </div>
                            </div>
                            <div class="form-floating mb-3">
                                <input class="form-control" id="inputEmail" type="email" placeholder="name@example.com"
                                    name="email" />
                                <span class="error" aria-live="polite"></span>
                                <label for="inputEmail">Email address</label>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <div class="form-floating mb-3 mb-md-0">
                                        <input class="form-control" id="inputPassword" type="password"
                                            placeholder="Create a password" / name="password">
                                        <label for="inputPassword">Password</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating mb-3 mb-md-0">
                                        <input class="form-control" id="inputPasswordConfirm" type="password"
                                            placeholder="Confirm password" / name="password-confirm">
                                        <label for="inputPasswordConfirm">Confirm Password</label>
                                    </div>
                                </div>
                            </div>
                            <div class="mt-4 mb-0">
                                <div class="d-grid"><button type="submit" class="btn btn-primary btn-block">Tạo tài
                                        khoản</button></div>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-center py-3">
                        <div class="small"><a href="/account/login">Đã có tài khoản ? tới trang đăng nhập</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<script src="/js/login.js"></script>