    <div class="col-9 all-product">
      <div class="list-product">
        <div class="header__list-product">
          <div>
            <span>TẤT CẢ SẢN PHẨM</span>
            <span>(100 Sản phẩm)</span>
          </div>
          <form action="">
            <label for="">Sắp sếp theo:</label>
            <select name="">
              <option value="">Mới nhất</option>
              <option value="">Giá (Thấp - Cao)</option>
              <option value="">Giá (Cao - Thấp)</option>
              <option value="">Tên (A - Z)</option>
              <option value="">Tên (Z - A)</option>
            </select>
          </form>
        </div>
        <div class="list__sub-menu-product">
          <ul>
            <a href="#">Mới về</a>
            <a href="#">Giảm giá</a>
            <a href="#">Bán chạy</a>
            <a href="#">Nổi bật</a>
          </ul>
        </div>
        <div class="list__all-product">
          {{#each products}}
          <div class="product__in-list col-4">
            <div class="card">
              {{!-- Image cua the --}}
              <div class="main__product">
                {{!-- Hết hàng --}}
                <div class="image-product"><a href="#"><img src="{{this.img}}" class="card-img-top" alt="..." onclick="goToDetail('{{this._id}}')"></a>
                  <div class="hethang">
                    {{#unless this.stored}}
                      <h3>Hết hàng</h3>
                    {{/unless}}
                  </div>
                </div>
                <div class="btn__main-product">
                  <button title="Xem chi tiết" onclick="goToDetail('{{this._id}}')"><i class="fas fa-search"></i></button>
                  {{#if this.stored}}
                  <button type="button" title="Thêm vào giỏ hàng" data-img='{{this.img}}'
                    onclick="addToCart('{{this._id}}','{{this.name}}',{{this.price}},{{this.stored}},this,1)"><i
                      class="fas fa-cart-plus"></i></button>
                  {{/if}}
                </div>
              </div>

              {{!-- Body cua the --}}
              <div class="body__card">
                 <h5 class="card-title"><a href="#" onclick="goToDetail('{{this._id}}')">{{this.name}}</a></h5>
                 <div class="product-reviews">
                  <div class="star-reviews">
                    <i class="far fa-star"></i>
                    <i class="far fa-star"></i>
                    <i class="far fa-star"></i>
                    <i class="far fa-star"></i>
                    <i class="far fa-star"></i>
                  </div>
                  <div class="views">
                    <p class="tatal-views">{{this.views}} <i class="fas fa-eye"></i></p>
                  </div>
                  {{!-- <div class="evaluate">0 đánh giá</div> --}}
                </div>
                <div class="mn-product">
                  <p id="money-product" class="card-text currFormat">{{this.price}} đ</p>
                  {{#if this.discount}}
                  <p class="price currFormat">{{this.originPrice}} đ</p>
                  <div class="discount">
                    <span>{{this.discount}}%</span>
                  </div>
                  {{/if}}
                </div>
              </div>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
