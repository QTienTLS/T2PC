


{{!-- Danh sách sản phẩm --}}
<div class="product-main">

  {{!-- Bộ lọc --}}
  <div class="filter">
    <div>BỘ LỌC SẢN PHẨM</div>

    {{!--  --}}
    <div class="filter-manufacturer">

      {{!-- Chủ đề --}}
      <div onclick="manufacturer()"class="manufacturer">Hãng sản xuất<i class="fas fa-angle-right"></i></div>

      {{!-- Danh sách lọc theo chủ đề --}}
      <ul id="main-manufacturer">
        <label class="manufacturer-main">RAZER
          <input type="checkbox" checked="checked">
          <span class="checkmark"></span>
        </label>
        <label class="manufacturer-main">LG
          <input type="checkbox">
          <span class="checkmark"></span>
        </label>
        <label class="manufacturer-main">T2PC Gaming
          <input type="checkbox">
          <span class="checkmark"></span>
        </label>
        <label class="manufacturer-main">MSI
          <input type="checkbox">
          <span class="checkmark"></span>
        </label>
        <label class="manufacturer-main">ACER
          <input type="checkbox">
          <span class="checkmark"></span>
        </label>
        <label class="manufacturer-main">DELL
          <input type="checkbox">
          <span class="checkmark"></span>
        </label>
      </ul>
    </div>
  </div>

  {{!-- Danh sách sản phẩm --}}
  <div class="all-products">
    {{#each products}}
    <div class="list-all-products shadow">

      {{!-- sản phẩm --}}
        <a class="card" href="#">
          {{!-- Thân của thẻ chứa sản phẩm --}}
          <div class="body-card">
            {{!-- Phần ảnh --}}
            <div class="image-product">
              <img src="{{this.img}}" class="card-img-top" alt="...">
            </div>
            {{!-- Phần thông tin và giá --}}
            {{!-- <h5 class="card-title">{{this.name}}</h5> --}}
            <div class="card-body">
              <h5 class="card-title">{{this.name}}</h5>
              <div class="card-bottom">
                <div class="product-reviews">
                  <div class="star-reviews">
                    <i class="far fa-star"></i>
                    <i class="far fa-star"></i>
                    <i class="far fa-star"></i>
                    <i class="far fa-star"></i>
                    <i class="far fa-star"></i>
                  </div>
                  <div class="evaluate">0 đánh giá</div>
                </div>
                <div class="mn-product">
                  <p id="money-product" class="card-text currFormat">{{this.price}} đ</p>
                  <p class="price currFormat">{{this.price}} đ</p>
                </div>
              </div>
            </div>
          </div>
          {{!-- <a class="btn-buy" href="#">Mua ngay</a> --}}
        </a>

        {{!-- Nút mua --}}
        <div class="btn-product">
          <a class="btn-buy btn-xem" href="#">Xem chi tiết</a>
          <a class="btn-buy" href="#">Them vao gio hang</a>
        </div>

        <div class="discount">
          <span>-20%</span>
        </div>
    </div>
  {{/each}}
</div>
</div>

